<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PlayerFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textview_player_name"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/networkimage_player"
        android:layout_below="@+id/textview_player_name"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_player_summary"
        android:layout_below="@+id/networkimage_player"
        android:layout_marginTop="10dp"
        android:padding="5dp" />




</RelativeLayout>
